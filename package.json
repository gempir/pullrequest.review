{
  "name": "pullrequestdotreview",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --bun vite dev",
    "build": "bun --bun vite build",
    "serve": "bun --bun vite preview",
    "cf-typegen": "wrangler types",
    "deploy": "bun run deploy:prod",
    "deploy:prod": "CLOUDFLARE_ENV=prod bun run build && CLOUDFLARE_ENV=prod wrangler deploy --env prod",
    "deploy:preview": "CLOUDFLARE_ENV=preview bun run build && CLOUDFLARE_ENV=preview wrangler deploy --env preview",
    "wrangler": "wrangler",
    "secret:put:prod": "wrangler secret put BITBUCKET_CLIENT_SECRET --env prod",
    "secret:put:preview": "wrangler secret put BITBUCKET_CLIENT_SECRET --env preview"
  },
  "dependencies": {
    "@pierre/diffs": "^4.6.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@tanstack/react-query": "^5.89.0",
    "@tanstack/react-router": "^1.131.59",
    "@tanstack/react-router-devtools": "^1.131.59",
    "@tanstack/react-start": "^1.131.59",
    "@tanstack/router-plugin": "^1.131.59",
    "@tanstack/router-vite-plugin": "^1.131.59",
    "@tailwindcss/vite": "^4.1.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.542.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "shiki": "^3.13.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13",
    "wrangler": "^4.39.0"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
